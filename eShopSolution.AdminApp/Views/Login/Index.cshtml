@using eShopSolution.ViewModels.System.Users
@model LoginRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link href="../../../assets/css/Login.css" rel="stylesheet" type="text/css" />
    <title>Đăng nhập & Đăng ký</title>

    <script src="../../../assets/js/Common.js"></script>

    <!-- using kendo -->
    <link rel="stylesheet" href="../../../assets/css/kendo.style/kendo.common.min.css" />
    <link rel="stylesheet" href="../../../assets/css/kendo.style/kendo.default.min.css" />
    <script src="../../../assets/js/jquery.min.js"></script>
    <script src="../../../assets/js/kendo.all.min.js"></script>
    <script src="../../../assets/js/MessageBox.js"></script> @*guides: https://sweetalert.js.org/guides/*@

    @*custom css datetimepicker*@
    <style>
        span.k-picker-wrap.k-state-default {
            border: none;
            border-radius: 0 25px 25px 0;
            height: 100% !important;
            width: 100% !important;
            background: #f0f0f0;
        }

        span.k-icon.k-i-calendar {
            background-color: #0ff;
        }

        input#txtDate_Dob {
            background-color: #f0f0f0;
        }
        /*Loading*/
       /* #loading {
          background-color:white;
          position: fixed;
          display: block;
