        .form-img {
            display: none;
            text-align: center;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: 50% 50% no-repeat rgba(79, 77, 77, 0.52);
            position: fixed;
            top: 0px;
            left: 0px;
        }

        .img-waiting {
            width: 10%;
            margin-top: 15%;
        }
    </style>
</head>
<body>
    
    <div class="container" id="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form asp-controller="Login" asp-action="Index" class="sign-in-form">
                    <h2 class="title">Đăng nhập</h2>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" asp-for="UserName" placeholder="Tài khoản" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" asp-for="Password" placeholder="Mật khẩu" />
                    </div>
                    <input type="submit" value="Đăng nhập" class="btn solid" />
                    <p class="social-text">Hoặc đăng nhập với</p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
                <form class="sign-up-form">
                    <h2 class="title">Đăng ký</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" id="txt_FullName" placeholder="Họ và tên" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-phone"></i>
                        <input type="text" id="txt_PhoneNumber" placeholder="Số điện thoại" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-birthday-cake"></i>
                        <div>
                            <input type="text" style="height:99%" id="txtDate_Dob" />
                        </div>
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="txt_Email" placeholder="Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" id="txt_UserName" placeholder="Tài khoản" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="txt_Password" placeholder="Mật khẩu" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="txt_ComfirmPassword" placeholder="Xác nhận mật khẩu" />
                    </div>
                    <input type="button" id="Register" class="btn" value="Đăng ký" />
                    <p class="social-text">Hoặc đăng ký với </p>
                    <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-google"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Bạn chưa có tài khoản ?</h3>
                    <p></p>
                    <button class="btn transparent" id="sign-up-btn">
                        Đăng ký
                    </button>
                </div>
                <img src="../../../assets/img/log.svg" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Bạn đã có tài khoản ?</h3>
                    <p></p>
                    <button class="btn transparent" id="sign-in-btn">
                        Đăng nhập
                    </button>
                </div>
                <img src="../../../assets/img/register.svg" class="image" alt="" />
            </div>
        </div>
    </div>
    <div class="form-img" id="loading" style="display: none;"><img src="../../../assets/img/WaitingLoad.gif" class="img-waiting" /></div>
    @* <div id="loading" style="display:none">
        <img src="../../../assets/img/WaitingLoad.gif" alt="Loading..."/>
    </div>*@
    <script src="../../../assets/js/Login.js"></script>
</body>
</html>